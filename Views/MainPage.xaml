<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppJogoForca.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Image x:Name="forcaImg"
                Source="forca.png"    
                WidthRequest="250"
                HorizontalOptions="Center"
            />

            <Label x:Name="temaLabel"
                FontSize="Title"
                FontAttributes="Bold"
                TextTransform="Uppercase"
                HorizontalOptions="Center"
                Margin="-40, 20, 0, 20"
            />           

            <Label x:Name="PalavraLabel"
                Text="_ _ _ _ _ _ _ _ _ _"
                FontSize="Title"
                HorizontalOptions="Center"
                Margin="-40, 0, 0, 40"
                TextTransform="Uppercase"
            />

            <FlexLayout x:Name="tecladoFlex"
                MaximumWidthRequest="400"
                Wrap="Wrap"
                Padding="20"
            >
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
